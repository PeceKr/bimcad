---
import Logo from "../assets/Logo.png";
import MenuSeparator from "../assets/menu-separator.png";
import PhoneActive from "../assets/slushalka10001.png";
import PhoneInactive from "../assets/slushalka10002.png";
import EmailActive from "../assets/email10001.png";
import EmailInactive from "../assets/email10002.png";
import LocationActive from "../assets/map_point10001.png";
import LocationInactive from "../assets/map_point10002.png";

interface Link {
  label: string;
  href: string;
}
const {
  brand = "BIMCAD STUDIO",
  links = [
    { label: "Home", href: "/" },
    { label: "About Us", href: "/about" },
    { label: "Services", href: "/services" },
    { label: "Portfolio", href: "/portfolio" },
    { label: "Contact Us", href: "/contact" },
  ] as Link[],
} = Astro.props;
---

<header class="sticky top-0 z-50 w-full bg-black">
  <nav class="relative flex w-full items-center justify-between px-4 py-5 lg:px-8 lg:py-6" aria-label="Main">
    <div class="flex items-center gap-5 lg:contents">
      <button
        id="nav-toggle"
        class="relative z-50 h-6 w-6 flex-shrink-0 lg:hidden"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <span class="absolute left-0 top-0 block h-0.5 w-full bg-white transition-all"></span>
        <span class="absolute left-0 top-1/2 block h-0.5 w-full -translate-y-1/2 bg-white transition-all"></span>
        <span class="absolute left-0 bottom-0 block h-0.5 w-full bg-white transition-all"></span>
      </button>

      <a href="/" class="relative z-50 flex items-center flex-shrink-0">
        <img src={Logo.src} alt="BIMCAD STUDIO" class="h-8 w-auto lg:h-10" />
      </a>
    </div>

    <ul class="hidden items-center gap-0 lg:flex lg:absolute lg:left-1/2 lg:-translate-x-1/2">
      {links.map((l, index) => {
        const currentPath = Astro.url.pathname;
        const isActive = currentPath === l.href || (l.href !== "/" && currentPath.startsWith(l.href));
        return (
          <li class="flex items-center">
            {index > 0 && (
              <img 
                src={MenuSeparator.src} 
                alt="" 
                class="mx-8 h-10 w-auto lg:h-12"
                aria-hidden="true"
              />
            )}
            <a 
              href={l.href} 
              class={`text-2xl font-normal transition ${
                isActive ? "text-white" : "text-zinc-400"
              } hover:text-white`}
            >
              {l.label}
            </a>
          </li>
        );
      })}
    </ul>

    <div class="hidden items-center gap-10 lg:flex lg:ml-auto">
      <a href="tel:" aria-label="Phone" class="group relative inline-block">
        <img 
          src={PhoneInactive.src} 
          alt="Phone" 
          style="height: 28px; width: 28px;"
          class="transition-opacity group-hover:opacity-0"
        />
        <img 
          src={PhoneActive.src} 
          alt="Phone" 
          style="height: 28px; width: 28px;"
          class="absolute top-0 left-0 opacity-0 transition-opacity group-hover:opacity-100"
        />
      </a>
      <a href="mailto:" aria-label="Email" class="group relative inline-block">
        <img 
          src={EmailInactive.src} 
          alt="Email" 
          style="height: 28px; width: 28px;"
          class="transition-opacity group-hover:opacity-0"
        />
        <img 
          src={EmailActive.src} 
          alt="Email" 
          style="height: 28px; width: 28px;"
          class="absolute top-0 left-0 opacity-0 transition-opacity group-hover:opacity-100"
        />
      </a>
      <a href="#" aria-label="Location" class="group relative inline-block">
        <img 
          src={LocationInactive.src} 
          alt="Location" 
          style="height: 28px; width: 28px;"
          class="transition-opacity group-hover:opacity-0"
        />
        <img 
          src={LocationActive.src} 
          alt="Location" 
          style="height: 28px; width: 28px;"
          class="absolute top-0 left-0 opacity-0 transition-opacity group-hover:opacity-100"
        />
      </a>
    </div>

    <button class="lg:hidden" aria-label="More options">
      <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
        <circle cx="12" cy="5" r="1.5" />
        <circle cx="12" cy="12" r="1.5" />
        <circle cx="12" cy="19" r="1.5" />
      </svg>
    </button>
  </nav>

  <div
    id="mobile-menu"
    class="fixed left-0 top-0 z-40 h-[70%] w-0 overflow-hidden bg-black transition-[width] duration-300 lg:hidden"
  >
    <div class="flex h-full flex-col pt-20">
      <ul class="flex flex-col gap-1 px-6">
        {links.map((l) => {
          const currentPath = Astro.url.pathname;
          const isActive = currentPath === l.href || (l.href !== "/" && currentPath.startsWith(l.href));
          return (
            <li>
              <a
                href={l.href}
                class={`block rounded px-3 py-3 text-base transition ${
                  isActive ? "text-white" : "text-zinc-400"
                } hover:text-white`}
              >
                {l.label}
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('nav-toggle');
    const panel = document.getElementById('mobile-menu');
    const bgImage = document.getElementById('hero-bg-image');
    
    if (!btn || !panel) return;

    function setOpen(open) {
      btn.setAttribute('aria-expanded', String(open));
      
      if (open) {
        panel.style.width = '280px';
        document.body.style.overflow = 'hidden';
        if (bgImage && bgImage.dataset.bgMenu) {
          bgImage.src = bgImage.dataset.bgMenu;
        }
      } else {
        panel.style.width = '0px';
        document.body.style.overflow = '';
        if (bgImage && bgImage.dataset.bgDefault) {
          bgImage.src = bgImage.dataset.bgDefault;
        }
      }
    }

    setOpen(false);

    btn.addEventListener('click', () => {
      const isOpen = btn.getAttribute('aria-expanded') === 'true';
      setOpen(!isOpen);
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') setOpen(false);
    });

    panel.addEventListener('click', (e) => {
      const a = e.target.closest('a');
      if (a) setOpen(false);
    });
  });
</script>
