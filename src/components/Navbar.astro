---
import Logo from "../assets/Logo.png";
import MenuSeparator from "../assets/menu-separator.png";
import PhoneActive from "../assets/slushalka10001.png";
import PhoneInactive from "../assets/slushalka10002.png";
import EmailActive from "../assets/email10001.png";
import EmailInactive from "../assets/email10002.png";
import LocationActive from "../assets/map_point10001.png";
import LocationInactive from "../assets/map_point10002.png";

interface Link {
  label: string;
  href: string;
}
const {
  brand = "BIMCAD STUDIO",
  links = [
    { label: "Home", href: "/" },
    { label: "About Us", href: "/about" },
    { label: "Services", href: "/services" },
    { label: "Portfolio", href: "/portfolio" },
    { label: "Contact Us", href: "/contact" },
  ] as Link[],
  navHeading = "",
} = Astro.props;
---

<header class="sticky top-0 z-50 w-full bg-black">
  <nav class="relative flex w-full items-center justify-between px-4 py-3 lg:px-8 lg:py-4" aria-label="Main">
    <div class="flex items-center gap-5 lg:flex lg:gap-6">
      <button
        id="nav-toggle"
        class="relative z-50 h-6 w-6 flex-shrink-0 lg:hidden"
        aria-label="Open menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <span class="absolute left-0 top-0 block h-0.5 w-full bg-white transition-all"></span>
        <span class="absolute left-0 top-1/2 block h-0.5 w-full -translate-y-1/2 bg-white transition-all"></span>
        <span class="absolute left-0 bottom-0 block h-0.5 w-full bg-white transition-all"></span>
      </button>

      <a href="/" class="relative z-50 flex items-center flex-shrink-0">
        <img src={Logo.src} alt="BIMCAD STUDIO" class="h-8 w-auto lg:h-10" />
      </a>
    </div>

    {navHeading && (
      <p class="pointer-events-none absolute right-12 top-1/2 z-40 -translate-y-1/2 text-right text-sm font-semibold uppercase tracking-[0.08em] text-[#999999] lg:hidden">
        {navHeading}
      </p>
    )}

    <ul class="hidden items-center gap-0 lg:flex lg:absolute lg:left-[55%] lg:-translate-x-1/2">
      {links.map((l, index) => {
        const currentPath = Astro.url.pathname;
        const isActive = currentPath === l.href || (l.href !== "/" && currentPath.startsWith(l.href));
        
        if (l.label === "Services") {
          const serviceLinks = [
            { label: "BIM Services", href: "/services/bim-services" },
            { label: "CAD Services", href: "/services/cad-services" },
            { label: "ARCHITECTURAL DRAFTING Services", href: "/services/architectural-drafting-services" },
          ];
          const isServicesActive = currentPath.startsWith("/services");
          return (
            <li class="relative flex items-center group">
              {index > 0 && (
                <img 
                  src={MenuSeparator.src} 
                  alt="" 
                  class="mx-8 h-10 w-auto lg:h-12"
                  aria-hidden="true"
                />
              )}
              <button
                id="services-desktop-toggle"
                type="button"
                class={`flex items-center gap-3 text-2xl font-normal transition ${
                  isServicesActive ? "text-white" : "text-zinc-400"
                } hover:text-white`}
              >
                <span>{l.label}</span>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <ul
                id="services-desktop-submenu"
                class="absolute top-full left-1/2 -translate-x-1/2 mt-2 hidden group-hover:block bg-black border border-zinc-800 rounded min-w-[280px] py-2"
              >
                {serviceLinks.map((sl) => {
                  const isSubActive = currentPath === sl.href;
                  return (
                    <li>
                      <a
                        href={sl.href}
                        class={`block px-4 py-2 text-lg transition ${
                          isSubActive ? "text-white" : "text-zinc-400"
                        } hover:text-white hover:bg-zinc-900`}
                      >
                        {sl.label}
                      </a>
                    </li>
                  );
                })}
              </ul>
            </li>
          );
        }
        
        return (
          <li class="flex items-center">
            {index > 0 && (
              <img 
                src={MenuSeparator.src} 
                alt="" 
                class="mx-8 h-10 w-auto lg:h-12"
                aria-hidden="true"
              />
            )}
            <a 
              href={l.href} 
              class={`text-2xl font-normal transition ${
                isActive ? "text-white" : "text-zinc-400"
              } hover:text-white`}
            >
              {l.label}
            </a>
          </li>
        );
      })}
    </ul>

    <div class="hidden items-center gap-10 lg:flex lg:ml-auto">
      <a href="tel:" aria-label="Phone" class="group relative inline-block">
        <img 
          src={PhoneInactive.src} 
          alt="Phone" 
          style="height: 28px; width: 28px;"
          class="transition-opacity group-hover:opacity-0"
        />
        <img 
          src={PhoneActive.src} 
          alt="Phone" 
          style="height: 28px; width: 28px;"
          class="absolute top-0 left-0 opacity-0 transition-opacity group-hover:opacity-100"
        />
      </a>
      <a href="mailto:" aria-label="Email" class="group relative inline-block">
        <img 
          src={EmailInactive.src} 
          alt="Email" 
          style="height: 28px; width: 28px;"
          class="transition-opacity group-hover:opacity-0"
        />
        <img 
          src={EmailActive.src} 
          alt="Email" 
          style="height: 28px; width: 28px;"
          class="absolute top-0 left-0 opacity-0 transition-opacity group-hover:opacity-100"
        />
      </a>
      <a href="#" aria-label="Location" class="group relative inline-block">
        <img 
          src={LocationInactive.src} 
          alt="Location" 
          style="height: 28px; width: 28px;"
          class="transition-opacity group-hover:opacity-0"
        />
        <img 
          src={LocationActive.src} 
          alt="Location" 
          style="height: 28px; width: 28px;"
          class="absolute top-0 left-0 opacity-0 transition-opacity group-hover:opacity-100"
        />
      </a>
    </div>

    <button class="lg:hidden" aria-label="More options">
      <svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
        <circle cx="12" cy="5" r="1.5" />
        <circle cx="12" cy="12" r="1.5" />
        <circle cx="12" cy="19" r="1.5" />
      </svg>
    </button>
  </nav>

  <div
    id="mobile-menu"
    class="fixed left-0 top-0 z-40 h-[70%] w-0 overflow-hidden bg-black transition-[width] duration-300 lg:hidden"
  >
    <div class="flex h-full flex-col pt-20">
      <ul class="flex flex-col gap-1 px-6">
        {links.map((l) => {
          const currentPath = Astro.url.pathname;
          const isActive = currentPath === l.href || (l.href !== "/" && currentPath.startsWith(l.href));
          
          if (l.label === "Services") {
            const serviceLinks = [
              { label: "BIM Services", href: "/services/bim-services" },
              { label: "CAD Services", href: "/services/cad-services" },
              { label: "ARCHITECTURAL DRAFTING Services", href: "/services/architectural-drafting-services" },
            ];
            const isServicesActive = currentPath.startsWith("/services");
            return (
              <li>
                <button
                  id="services-toggle"
                  class={`flex w-full items-center justify-between rounded px-3 py-3 text-base transition ${
                    isServicesActive ? "text-white" : "text-zinc-400"
                  } hover:text-white`}
                >
                  <span>{l.label}</span>
                  <svg 
                    id="services-arrow"
                    class="h-4 w-4 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <ul id="services-submenu" class="hidden flex-col gap-1 pl-6">
                  {serviceLinks.map((sl) => {
                    const isSubActive = currentPath === sl.href;
                    return (
                      <li>
                        <a
                          href={sl.href}
                          class={`block rounded px-3 py-3 text-base transition ${
                            isSubActive ? "text-white" : "text-zinc-400"
                          } hover:text-white`}
                        >
                          -{sl.label}
                        </a>
                      </li>
                    );
                  })}
                </ul>
              </li>
            );
          }
          
          return (
            <li>
              <a
                href={l.href}
                class={`block rounded px-3 py-3 text-base transition ${
                  isActive ? "text-white" : "text-zinc-400"
                } hover:text-white`}
              >
                {l.label}
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('nav-toggle');
    const panel = document.getElementById('mobile-menu');
    const bgImage = document.getElementById('hero-bg-image');
    
    if (!btn || !panel) return;

    function setOpen(open) {
      btn.setAttribute('aria-expanded', String(open));
      
      if (open) {
        panel.style.width = '280px';
        document.body.style.overflow = 'hidden';
        if (bgImage && bgImage.dataset.bgMenu) {
          bgImage.src = bgImage.dataset.bgMenu;
        }
      } else {
        panel.style.width = '0px';
        document.body.style.overflow = '';
        if (bgImage && bgImage.dataset.bgDefault) {
          bgImage.src = bgImage.dataset.bgDefault;
        }
      }
    }

    setOpen(false);

    btn.addEventListener('click', () => {
      const isOpen = btn.getAttribute('aria-expanded') === 'true';
      setOpen(!isOpen);
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') setOpen(false);
    });

    panel.addEventListener('click', (e) => {
      const a = e.target.closest('a');
      if (a) setOpen(false);
    });

    const servicesToggle = document.getElementById('services-toggle');
    const servicesSubmenu = document.getElementById('services-submenu');
    const servicesArrow = document.getElementById('services-arrow');
    
    if (servicesToggle && servicesSubmenu && servicesArrow) {
      servicesToggle.addEventListener('click', () => {
        const isOpen = !servicesSubmenu.classList.contains('hidden');
        if (isOpen) {
          servicesSubmenu.classList.add('hidden');
          servicesArrow.style.transform = 'rotate(0deg)';
        } else {
          servicesSubmenu.classList.remove('hidden');
          servicesArrow.style.transform = 'rotate(180deg)';
        }
      });
    }

    const servicesDesktopToggle = document.getElementById('services-desktop-toggle');
    const servicesDesktopSubmenu = document.getElementById('services-desktop-submenu');
    const servicesDesktopLi = servicesDesktopToggle?.closest('li');
    
    if (servicesDesktopLi && servicesDesktopSubmenu) {
      let timeout: number | undefined;
      
      servicesDesktopLi.addEventListener('mouseenter', () => {
        if (timeout) clearTimeout(timeout);
        servicesDesktopSubmenu.classList.remove('hidden');
      });
      
      servicesDesktopLi.addEventListener('mouseleave', () => {
        timeout = window.setTimeout(() => {
          servicesDesktopSubmenu.classList.add('hidden');
        }, 200);
      });
      
      servicesDesktopSubmenu.addEventListener('mouseenter', () => {
        if (timeout) clearTimeout(timeout);
      });
      
      servicesDesktopSubmenu.addEventListener('mouseleave', () => {
        servicesDesktopSubmenu.classList.add('hidden');
      });
    }
  });
</script>
