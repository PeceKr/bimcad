---
import BaseLayout from "../layouts/Layout.astro";
import bgImage from "../assets/bg.png";
import mapImage from "../assets/map.png";
---
<BaseLayout title="Contact Us â€” BIMCAD Studio">
  <section class="relative w-full min-h-[92vh]">
    <div class="fixed inset-0 -z-10">
      <img
        src={bgImage.src}
        alt="Architectural background"
        class="h-full w-full object-cover blur-sm opacity-50"
      />
    </div>

    <div class="relative z-10 bg-black/50 backdrop-blur-sm min-h-[92vh]">

        <!-- Two Column Layout for Desktop -->
        <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[92vh]">

          <!-- Left Column: Form -->
          <div class="px-6 py-8 lg:bg-black lg:flex lg:items-center lg:justify-center lg:px-12 lg:py-12">
            <div class="w-full lg:max-w-xl">
              <h1 class="mb-6 text-2xl font-bold text-white lg:text-5xl lg:mb-12">
                Send Us A <span class="font-bold">Message</span>
              </h1>

              <!-- Success Message -->
              <div id="success-message" class="hidden mb-6 p-4 bg-green-500/20 border border-green-500 rounded-lg text-green-100">
                <p class="font-semibold">Thank you for your message!</p>
                <p class="text-sm">We'll get back to you soon.</p>
              </div>

              <!-- Error Message -->
              <div id="error-message" class="hidden mb-6 p-4 bg-red-500/20 border border-red-500 rounded-lg text-red-100">
                <p class="font-semibold">Oops! Something went wrong.</p>
                <p class="text-sm" id="error-text">Please try again later.</p>
              </div>

              <form id="contact-form" class="space-y-4 lg:space-y-6" method="POST" action="/api/contact">
                <div>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-5 py-3 lg:px-6 lg:py-4 bg-white border-none rounded-full text-black placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 transition text-base lg:text-lg"
                    placeholder="Name"
                  />
                </div>

                <div>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-5 py-3 lg:px-6 lg:py-4 bg-white border-none rounded-full text-black placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 transition text-base lg:text-lg"
                    placeholder="Email"
                  />
                </div>

                <div>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-5 py-3 lg:px-6 lg:py-4 bg-white border-none rounded-full text-black placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 transition text-base lg:text-lg"
                    placeholder="Phone"
                  />
                </div>

                <div>
                  <textarea
                    id="message"
                    name="message"
                    rows="5"
                    required
                    class="w-full px-5 py-4 lg:px-6 lg:py-5 bg-white border-none rounded-3xl text-black placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white/50 transition resize-none text-base lg:text-lg"
                    placeholder="Message"
                  ></textarea>
                </div>

                <div class="flex justify-center pt-2 lg:pt-4">
                  <button
                    type="submit"
                    id="submit-btn"
                    class="px-16 py-3 lg:px-20 lg:py-3.5 bg-gray-600 text-white font-medium text-base lg:text-lg rounded-full hover:bg-gray-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
                  >
                    <span id="btn-text">Send</span>
                    <span id="btn-loading" class="hidden">Sending...</span>
                  </button>
                </div>
              </form>
            </div>
          </div>

          <!-- Right Column: Map and Info -->
          <div class="px-6 pb-8 lg:px-0 lg:pb-0 lg:relative">
            <div class="lg:absolute lg:inset-0">
              <!-- Map Background -->
              <div class="relative h-96 lg:h-full rounded-lg lg:rounded-none overflow-hidden">
                <img
                  src={mapImage.src}
                  alt="Map showing our location"
                  class="w-full h-full object-cover opacity-70"
                />

                <!-- Overlay Content -->
                <div class="absolute inset-0 flex flex-col justify-between p-4 sm:p-6 lg:p-12">

                  <!-- Collaboration Text -->
                  <div class="text-right">
                    <h2 class="text-2xl sm:text-3xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight drop-shadow-lg">
                      <span class="font-bold">Collaboration</span><br />
                      begins with<br />
                      a simple hello
                    </h2>
                  </div>

                  <!-- Bottom Section: Social and Email -->
                  <div class="space-y-3 sm:space-y-4 lg:space-y-6">
                    <!-- Follow Us -->
                    <div>
                      <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold text-white mb-2 sm:mb-3 drop-shadow-lg">Follow Us:</h3>
                      <div class="flex gap-3 sm:gap-4 lg:gap-6 items-center">
