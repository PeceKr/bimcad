---
import BaseLayout from "../layouts/Layout.astro";
import bgImage from "../assets/bg.png";
import bg1Image from "../assets/bg1.png";
import homeVideo from "../assets/home_video.mp4";
---
<BaseLayout title="Home â€” BIMCAD Studio">
  <section class="relative h-full w-full overflow-hidden">
    <div class="absolute inset-0">
      <!-- Mobile/Tablet background -->
      <img
        id="hero-bg-image"
        src={bgImage.src}
        data-bg-default={bgImage.src}
        data-bg-menu={bg1Image.src}
        alt="Architectural rendering"
        class="h-full w-full object-cover transition-opacity duration-300 lg:hidden"
      />
      <!-- Desktop background -->
      <video
        id="hero-bg-video-desktop"
        src={homeVideo}
        autoplay
        muted
        loop
        playsinline
        class="hidden h-full w-full object-cover transition-opacity duration-300 lg:block"
      ></video>
    </div>

    <div class="absolute bottom-0 left-0 right-0 flex justify-end pb-8 lg:justify-end lg:pb-12">
      <div class="bg-zinc-900/70 pl-8 pr-0 py-4 lg:px-12 lg:py-6 lg:pr-16">
        <p class="text-left text-3xl font-thin text-white lg:text-4xl pl-[88px]">PRECISION IN EVERY LINE.</p>
        <p class="mt-2 text-3xl font-black text-white lg:mt-3 lg:text-4xl">INSIGHT IN EVERY MODEL.</p>
      </div>
    </div>
  </section>
</BaseLayout>
