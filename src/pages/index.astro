---
import BaseLayout from "../layouts/Layout.astro";
import bgImage from "../assets/bg.png";
import bg1Image from "../assets/bg1.png";
import homeImage from "../assets/home.jpg";
---
<BaseLayout title="Home â€” BIMCAD Studio">
  <section class="relative h-full w-full overflow-hidden">
    <div class="absolute inset-0">
      <!-- Mobile/Tablet background -->
      <img
        id="hero-bg-image"
        src={bgImage.src}
        data-bg-default={bgImage.src}
        data-bg-menu={bg1Image.src}
        alt="Architectural rendering"
        class="h-full w-full object-cover transition-opacity duration-300 lg:hidden"
      />
      <!-- Desktop background -->
      <img
        id="hero-bg-image-desktop"
        src={homeImage.src}
        data-bg-default={homeImage.src}
        data-bg-menu={bg1Image.src}
        alt="Architectural rendering"
        class="hidden h-full w-full object-cover transition-opacity duration-300 lg:block"
      />
    </div>

    <div class="absolute bottom-0 left-0 right-0 flex justify-end pb-8 lg:justify-end lg:pb-12">
      <div class="bg-zinc-900/70 pl-8 pr-0 py-6 lg:px-20 lg:py-10 lg:pr-32">
        <p class="text-left text-3xl font-thin text-white lg:text-6xl pl-[88px]">PRECISION IN EVERY LINE.</p>
        <p class="mt-2 text-3xl font-black text-white lg:mt-4 lg:text-6xl">INSIGHT IN EVERY MODEL.</p>
      </div>
    </div>
  </section>
</BaseLayout>
